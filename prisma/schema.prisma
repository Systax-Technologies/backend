generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductStatus {
  InStock
  Sold
  Active
  Removed
  Damaged
}

model Product {
  id            String        @id @default(cuid())
  userId        String?
  code          String        @unique
  productStatus ProductStatus

  productTypeId String
  productType   ProductType @relation(fields: [productTypeId], references: [id])
}

model ProductType {
  id          String   @id @default(cuid())
  model       String
  description String
  color       String
  size        String
  price       Float
  addedAt     DateTime

  Product Product[]
}

model Employee {
  id        String @id @default(cuid())
  firstName String
  lastName  String
  email     String @unique
  password  String
}
